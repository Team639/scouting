# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Indentation for all JS
[src/**.es6]
indent_style = space
indent_size = 2

[src/**.html]
indent_style = space
indent_size = 2

[static/**.html]
indent_style = space
indent_size = 2

[src/**.css]
indent_style = space
indent_size = 2
